{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "env": [
                "PRODUCT_APP_URL",
                "CART_APP_URL"
            ],
            "outputs": [
                "dist/**"
            ]
        }
    }
}